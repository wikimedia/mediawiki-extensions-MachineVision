{
	"root": true,
	"extends": [
		"wikimedia/client",
		"wikimedia/jquery",
		"wikimedia/mediawiki"
	],
	"globals": {
		"OO": "readonly",
		"wikibase": "readonly"
	},
	"rules": {
		"no-jquery/variable-pattern": "off",
		"jsdoc/no-undefined-types": [ "warn", {
			"definedTypes": [
				"VueComponent",
				"dataValues"
			]
		} ]
	},
	"overrides": [
		{
			"files": [ "**/*.vue" ],
			"rules": {
				"vue/html-self-closing": [ "error", {
					"html": {
						"void": "never",
						"normal": "never",
						"component": "never"
					}
				} ],
				"vue/v-bind-style": [ "warn", "shorthand" ],
				"vue/v-on-style": [ "warn", "shorthand" ],
				"vue/v-slot-style": [ "warn", "shorthand" ]
			}
		}
	]
}
